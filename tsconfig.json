{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
    ]
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
